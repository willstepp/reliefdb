<script type='text/javascript'>
  function reloadmap() {
    if (map) {
      var z = map.getZoomLevel();
      var c = map.getCenterLatLng();
      var t = map.getCurrentMapType();
      load_gmap();
      map.centerAndZoom(c, z);
      map.setMapType(t);
    }
  }
  window.onresize = reloadmap

  function shelterdetails(shelter) {
    if (window.name == "mapwindow") {
      opener.location = "/shelters/show/" + shelter;
      opener.focus()
    } else {
      parent.location = "/shelters/show/" + shelter;
    }
    this.href = "javascript:void(0)";
    return false;
  }

  function recenter(lng, lat) {
    map.recenterOrPanToLatLng(new GPoint(lng, lat));
  }

  function centerzoom(lng, lat, zoom) {
    map.centerAndZoom(new GPoint(lng, lat), zoom);
  }
</script>

<%= gmap :marker => @markers, :point => $DEFAULT_MAP_CENTER, :zoom => $ZOOM_FAR, :controls => [:zoom, :type] %>

