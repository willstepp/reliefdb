<h1>Listing faq_entries</h1>

<table>
  <tr>
  <% for column in FaqEntry.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for faq_entry in @faq_entries %>
  <tr>
  <% for column in FaqEntry.content_columns %>
    <td><%=h faq_entry.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Up', :action => 'up', :id => faq_entry %></td>
    <td><%= link_to 'Down', :action => 'down', :id => faq_entry %></td>
    <td><%= link_to 'Show', :action => 'show', :id => faq_entry %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => faq_entry %></td>
    <td><%= link_to 'Destroy', {:action => 'destroy', :id => faq_entry}, :confirm => 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @faq_entry_pages.current.previous } if @faq_entry_pages.current.previous %>
<%= link_to 'Next page', { :page => @faq_entry_pages.current.next } if @faq_entry_pages.current.next %> 

<br />

<%= link_to 'New faq_entry', :action => 'new' %>
